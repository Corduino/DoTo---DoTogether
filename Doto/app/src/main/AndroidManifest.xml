<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.mohawk.doto">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/Theme.DoTo"
        android:usesCleartextTraffic="true">
        <activity
            android:name="ca.mohawk.doto.Favourites"
            android:exported="true" />
        <activity
            android:name="ca.mohawk.doto.ui.todo.AddNewTodo"
            android:exported="true" />
        <activity
            android:name="ca.mohawk.doto.ui.todo.EditTodo"
            android:exported="true" />
        <activity
            android:name="ca.mohawk.doto.Forgot"
            android:exported="true" />
        <activity
            android:name="ca.mohawk.doto.Reset"
            android:exported="true" />
        <activity
            android:name="ca.mohawk.doto.ViewProfile"
            android:exported="true" />
        <activity
            android:name="ca.mohawk.doto.Chat"
            android:exported="true" />
        <activity
            android:name="ca.mohawk.doto.MainMenu"
            android:exported="true"
            android:label="@string/title_activity_main_navigation" />
        <activity
            android:name="ca.mohawk.doto.Signup"
            android:exported="true" />
        <activity
            android:name="ca.mohawk.doto.EditProfile"
            android:exported="true" />
        <activity
            android:name="ca.mohawk.doto.MainActivity"
            android:exported="true" />
        <activity
            android:name="ca.mohawk.doto.Login"
            android:exported="true" />
        <activity
            android:name="ca.mohawk.doto.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>